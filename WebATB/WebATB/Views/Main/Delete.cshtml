@using WebATB.Models.Users
@model UserItemModel
@{
    Layout="MainLayout"; // Не використовуємо Layout
}
<div class="mt-4 d-flex justify-content-center">
    <div class="card" style="width: 22rem;">
        <img src="/images/@Model.Image"
            class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">Дійсно бажаєте видалити?</h5>
            <p class="card-text">@Model.Name</p>
            <form asp-action="Delete" method="post">
                <input asp-for="Id" type="hidden" />
                <button class="btn btn-danger" type="submit">
                    Видалити
                </button>
                <a asp-action="Index" class="btn btn-primary">Скасувати</a>
            </form>
            
        </div>
    </div>
</div>


